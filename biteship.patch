+<?php
+
+namespace Plugin\BiteshipShipping\Providers;
+
+use Illuminate\Support\ServiceProvider;
+use Plugin\BiteshipShipping\Shipping\BiteshipShippingMethod;
+
+class HookServiceProvider extends ServiceProvider
+{
+    public function boot(): void
+    {
+        if (!defined('ECOMMERCE_MODULE_SCREEN_NAME')) {
+            return;
+        }
+
+        add_filter('ecommerce_shipping_methods', [$this, 'registerBiteship'], 20);
+    }
+
+    public function registerBiteship(array $methods): array
+    {
+        if (!setting('shipping_biteship_status')) {
+            return $methods;
+        }
+
+        $methods[BITESHIP_SHIPPING_METHOD_NAME] = [
+            'id'    => BITESHIP_SHIPPING_METHOD_NAME,
+            'name'  => 'Biteship',
+            'class' => BiteshipShippingMethod::class,
+        ];
+
+        return $methods;
+    }
+}

