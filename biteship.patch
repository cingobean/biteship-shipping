+<?php
+
+namespace Plugin\BiteshipShipping\Shipping;
+
+use Illuminate\Support\Facades\Http;
+
+class BiteshipShippingMethod
+{
+    public function getAvailableShippingMethods($order): array
+    {
+        $apiKey = setting('biteship_api_key');
+        if (!$apiKey || !$order || !$order->address) {
+            return [];
+        }
+
+        $payload = [
+            'origin_postal_code'      => setting('biteship_origin_postal_code'),
+            'destination_postal_code' => $order->address->zip_code,
+            'couriers'                => setting('biteship_couriers', 'jne,jnt,sicepat,pos'),
+            'items' => $order->products->map(function ($item) {
+                return [
+                    'name'     => $item->product_name,
+                    'quantity' => $item->qty,
+                    'weight'   => max(1, (int) $item->weight),
+                    'price'    => (int) $item->price,
+                ];
+            })->toArray(),
+        ];
+
+        $res = Http::withToken($apiKey)
+            ->post('https://api.biteship.com/v1/rates/couriers', $payload);
+
+        if (!$res->successful()) {
+            return [];
+        }
+
+        $rates = [];
+        foreach ($res->json('pricing', []) as $courier) {
+            foreach ($courier['services'] as $service) {
+                $rates[] = [
+                    'name'  => strtoupper($courier['courier_name']) . ' ' . $service['service_name'],
+                    'code'  => 'biteship_' . $courier['courier_code'] . '_' . $service['service_code'],
+                    'price' => (int) $service['price'],
+                    'etd'   => $service['etd'],
+                ];
+            }
+        }
+
+        return $rates;
+    }
+}

