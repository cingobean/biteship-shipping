+<?php
+
+namespace Plugin\BiteshipShipping\Http\Controllers;
+
+use Illuminate\Routing\Controller;
+use Illuminate\Support\Facades\Http;
+use Botble\Ecommerce\Models\Order;
+
+class BiteshipShipmentController extends Controller
+{
+    public function create(int $orderId)
+    {
+        $order = Order::findOrFail($orderId);
+
+        $payload = [
+            'reference_id' => 'ORDER-' . $order->id,
+            'origin_postal_code' => setting('biteship_origin_postal_code'),
+            'destination_postal_code' => $order->address->zip_code,
+            'delivery_type' => 'pickup',
+            'items' => $order->products->map(fn ($item) => [
+                'name'     => $item->product_name,
+                'price'    => (int) $item->price,
+                'quantity' => $item->qty,
+            ])->toArray(),
+        ];
+
+        $res = Http::withToken(setting('biteship_api_key'))
+            ->post('https://api.biteship.com/v1/orders', $payload);
+
+        abort_unless($res->successful(), 400);
+
+        return response()->json($res->json());
+    }
+}

